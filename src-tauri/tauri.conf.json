{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Bema",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost:5001/*",
          "http://127.0.0.1:5001/*"
        ]
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/ipfs_proxy",
            "sidecar": true,
            "args": true
          },
          {
            "name": "binaries/ipfs",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "$APP/*",
          "$DESKTOP/*",
          "$APPDATA/*",
          "$APPDATA/*/*",
          "$APPDATA/*/**",
          "**"
        ]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Video",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "binaries/ipfs",
        "binaries/ipfs_proxy"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.bema.app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "Bema App",
        "width": 1280
      }
    ]
  }
}
